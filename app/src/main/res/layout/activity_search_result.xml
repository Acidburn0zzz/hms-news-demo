<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".page.fragment.VideoFragment">
    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/iv_back"
            android:src="@mipmap/icon_back"
            android:layout_centerVertical="true"
            android:adjustViewBounds="true"
            android:layout_width="40dp"
            android:padding="4dp"
            android:layout_height="30dp">
        </ImageView>
        <View
            android:id="@+id/bar_search"
            android:layout_toEndOf="@+id/iv_back"
            android:layout_width="match_parent"
            android:layout_centerVertical="true"
            android:background="@drawable/home_search"
            android:layout_marginEnd="20dp"
            android:layout_height="30dp">
        </View>
        <ImageView
            android:id="@+id/iv_search"
            android:layout_alignBottom="@+id/bar_search"
            android:src="@mipmap/icon_search"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:padding="4dp"
            android:layout_alignTop="@+id/bar_search"
            android:layout_alignStart="@+id/bar_search"
            >
        </ImageView>
        <TextView
            android:id="@+id/tv_search_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/iv_search"
            android:layout_centerVertical="true"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_alignTop="@+id/bar_search"
            android:layout_alignBottom="@+id/bar_search"
            android:background="@drawable/search_res_bgd"
            android:ellipsize="end"
            android:maxEms="50"
            android:maxLines="1"
            android:padding="4dp"
            android:singleLine="true"
            android:textColor="@color/white" />
    </RelativeLayout>
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/search_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:tabMode="fixed"
        app:tabIndicatorColor="@color/color_blue"
        app:tabBackground="@color/white"
        app:tabIndicatorFullWidth="false"
        app:tabIndicatorHeight="2dp"
        app:tabGravity="center"
        app:tabRippleColor="@color/hiad_transparent"
        app:tabSelectedTextColor="@color/color_blue"
       >
    </com.google.android.material.tabs.TabLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/search_view_pager"
        android:layout_marginTop="2dp"
        android:layout_width="match_parent"
        android:overScrollMode="never"
        android:layout_height="match_parent"/>

</LinearLayout>